<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.common.service.TemplateBean">
    <resultMap id="templateXSLResultMap" type="org.complitex.flexbuh.common.entity.template.TemplateXSL">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="data" property="data"/>
        <result column="upload_date" property="uploadDate"/>
    </resultMap>

    <resultMap id="templateXSDResultMap" type="org.complitex.flexbuh.common.entity.template.TemplateXSD">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="data" property="data"/>
		<result column="upload_date" property="uploadDate"/>
    </resultMap>

    <resultMap id="templateControlResultMap" type="org.complitex.flexbuh.common.entity.template.TemplateControl">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="data" property="data"/>
		<result column="upload_date" property="uploadDate"/>
    </resultMap>

	<resultMap id="templateFOResultMap" type="org.complitex.flexbuh.common.entity.template.TemplateFO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="data" property="data"/>
		<result column="upload_date" property="uploadDate"/>
    </resultMap>

    <insert id="insertTemplateXSL" parameterType="org.complitex.flexbuh.common.entity.template.AbstractTemplate">
        insert into `template_xsl` (`name`, `data`, `upload_date`) values (#{name}, #{data}, #{uploadDate})
    </insert>

    <insert id="insertTemplateXSD" parameterType="org.complitex.flexbuh.common.entity.template.AbstractTemplate">
        insert into `template_xsd` (`name`, `data`, `upload_date`) values (#{name}, #{data}, #{uploadDate})
    </insert>

    <insert id="insertTemplateFO" parameterType="org.complitex.flexbuh.common.entity.template.AbstractTemplate">
        insert into `template_fo` (`name`, `data`, `upload_date`) values (#{name}, #{data}, #{uploadDate})
    </insert>

    <insert id="insertTemplateControl" parameterType="org.complitex.flexbuh.common.entity.template.AbstractTemplate">
        insert into `template_control` (`name`, `data`, `upload_date`) values (#{name}, #{data}, #{uploadDate})
    </insert>

    <select id="selectTemplateXSL" parameterType="string" resultMap="templateXSLResultMap">
        select * from `template_xsl` where `name` = #{name}
    </select>

    <select id="selectTemplateXSD" parameterType="string" resultMap="templateXSDResultMap">
        select * from `template_xsd` where `name` = #{name}
    </select>

    <select id="selectTemplateControl" resultType="string" resultMap="templateControlResultMap">
        select * from `template_control` where `name` = #{name}
    </select>

    <select id="selectTemplateFO" resultType="string" resultMap="templateFOResultMap">
        select * from `template_fo` where `name` = #{name}
    </select>

	<select id="selectAllTemplateXSLs" resultMap="templateXSLResultMap">
        select `name`, `upload_date` from `template_xsl`
    </select>

	<select id="selectTemplateXSLs" parameterType="org.complitex.flexbuh.common.entity.AbstractFilter" resultMap="templateXSLResultMap">
        select `name`, `upload_date` from `template_xsl` order by `name` limit #{first}, #{count}
    </select>

	<select id="selectAllTemplateXSLsCount" resultType="int">
        select count(id) from `template_xsl`
    </select>

    <select id="selectAllTemplateXSDs" resultMap="templateXSDResultMap">
        select `name`, `upload_date` from `template_xsd`
    </select>

	<select id="selectTemplateXSDs" parameterType="org.complitex.flexbuh.common.entity.AbstractFilter" resultMap="templateXSDResultMap">
        select `name`, `upload_date` from `template_xsd` order by `name` limit #{first}, #{count}
    </select>

	<select id="selectAllTemplateXSDsCount" resultType="int">
        select count(id) from `template_xsd`
    </select>

    <select id="selectAllTemplateControls" resultMap="templateControlResultMap">
        select `name`, `upload_date` from `template_control`
    </select>

	<select id="selectTemplateControls" parameterType="org.complitex.flexbuh.common.entity.AbstractFilter" resultMap="templateControlResultMap">
        select `name`, `upload_date` from `template_control` order by `name` limit #{first}, #{count}
    </select>

	<select id="selectAllTemplateControlsCount" resultType="int">
        select count(id) from `template_control`
    </select>

    <select id="selectAllTemplateFOs" resultMap="templateFOResultMap">
        select `name`, `upload_date` from `template_fo`
    </select>

	<select id="selectTemplateFOs" parameterType="org.complitex.flexbuh.common.entity.AbstractFilter" resultMap="templateFOResultMap">
        select `name`, `upload_date` from `template_fo` order by `name` limit #{first}, #{count}
    </select>

	<select id="selectAllTemplateFOsCount" resultType="int">
        select count(id) from `template_fo`
    </select>

    <select id="selectTemplateXSLNames" resultType="string">
        select `name` from `template_xsl` where `name` like 'J%'
    </select>
</mapper>