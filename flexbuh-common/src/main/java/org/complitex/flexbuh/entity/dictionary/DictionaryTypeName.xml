<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.entity.dictionary.DictionaryTypeName">
    <resultMap id="dictionaryTypeNameResultMap" type="org.complitex.flexbuh.entity.dictionary.DictionaryTypeName">
        <id column="id" property="id"/>
        <result property="value" column="value"/>
		<association property="language" column="language_id" javaType="org.complitex.flexbuh.entity.Language"
					 select="org.complitex.flexbuh.service.LanguageBean.findById"/>
    </resultMap>

	<select id="selectDictionaryTypeNames" parameterType="long" resultMap="dictionaryTypeNameResultMap"
			useCache="true" flushCache="false">
		select * from `dictionary_type_name` where `dictionary_type_id`=#{id}
	</select>
</mapper>