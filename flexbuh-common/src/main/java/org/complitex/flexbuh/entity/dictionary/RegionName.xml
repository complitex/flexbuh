<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.entity.dictionary.RegionName">
    <resultMap id="regionNameResultMap" type="org.complitex.flexbuh.entity.dictionary.RegionName">
        <id column="id" property="id"/>
        <result property="value" column="value"/>
		<association property="language" column="language_id" javaType="org.complitex.flexbuh.entity.Language"
					 select="org.complitex.flexbuh.service.LanguageBean.findById"/>
    </resultMap>

	<select id="selectRegionNames" parameterType="long" resultMap="regionNameResultMap"
			useCache="true" flushCache="false">
		select *  from `region_name` where `region_id`=#{id}
	</select>

	<insert id="create" parameterType="map" keyProperty="id" useGeneratedKeys="true"
			flushCache="true">
        insert into `region_name` (`region_id`, `language_id`, `value`)
        	values (#{regionId}, #{languageId}, #{val})
    </insert>

</mapper>