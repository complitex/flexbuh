<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.LanguageBean">
	<resultMap id="languageResultMap" type="org.complitex.flexbuh.entity.Language">
		<id property="id" column="id"/>
		<result column="lang_iso_code" property="langIsoCode"/>
		<result column="default_lang" property="defaultLang"/>
    </resultMap>

	<select id="readAll" resultMap="languageResultMap"
			useCache="true" flushCache="false">
        select * from `${table}`
    </select>

	<select id="findById" parameterType="org.complitex.flexbuh.entity.Stub" resultMap="languageResultMap"
			useCache="true" flushCache="false">
        select * from `language` where `id` = #{id}
    </select>

	<select id="findByLangIsoCode" parameterType="map" resultMap="languageResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `lang_iso_code` = #{langIsoCode}
    </select>
</mapper>