<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.DictionaryTypeBean">
    <resultMap id="dictionaryTypeResultMap" type="org.complitex.flexbuh.entity.dictionary.DictionaryType">
		<id property="id" column="id"/>
		<result column="code" property="code"/>
		<collection property="names" ofType="org.complitex.flexbuh.entity.dictionary.DictionaryTypeName" column="id"
                    select="selectDictionaryTypeNames"/>
		<collection property="fileNames" ofType="java.lang.String" column="id" select="findFileName"/>
    </resultMap>

    <resultMap id="dictionaryTypeNameResultMap" type="org.complitex.flexbuh.entity.dictionary.DictionaryTypeName"
               extends="localizedStringResultMap">
        <result column="dictionary_type_id" property="dictionaryTypeId"/>
    </resultMap>

	<select id="selectAllDictionaryTypes" resultMap="dictionaryTypeResultMap">
        select * from `dictionary_type`
    </select>

	<select id="selectDictionaryTypes" parameterType="long" resultMap="dictionaryTypeResultMap">
        select * from `dictionary_type` where `id` = #{id}
    </select>

	<select id="selectDictionaryTypeByCode" parameterType="string" resultMap="dictionaryTypeResultMap">
        select * from `dictionary_type` where `code` = #{code}
    </select>

	<select id="selectDictionaryTypesFileName" parameterType="long" resultType="string">
		select `file_name` from `dictionary_file_name` where `dictionary_type_id` = #{id}
	</select>

    <select id="selectDictionaryTypesCount">
        select count(*) from `dictionary_type`
    </select>

    <!--DictionaryTypeName-->

    <select id="selectDictionaryTypeNames" parameterType="long" resultMap="dictionaryTypeNameResultMap">
		select * from `dictionary_type_name` where `dictionary_type_id` = #{id}
	</select>
</mapper>