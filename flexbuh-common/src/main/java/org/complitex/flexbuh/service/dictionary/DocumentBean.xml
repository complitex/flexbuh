<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.DocumentBean">
    <resultMap id="documentResultMap" type="org.complitex.flexbuh.entity.dictionary.Document"
               extends="org.complitex.flexbuh.entity.dictionary.AbstractPeriodDictionary.periodDictionaryResultMap">
        <result property="cDoc" column="c_doc"/>
        <result property="cDocSub" column="c_doc_sub"/>
        <result property="cntSet" column="cnt_set"/>
        <result property="parentCDoc" column="parent_c_doc"/>
        <result property="parentCDocSub" column="parent_c_doc_sub"/>
        <result property="selected" column="selected"/>
    </resultMap>
    
    <resultMap id="linkedDocumentResultMap" type="org.complitex.flexbuh.entity.dictionary.Document" extends="documentResultMap">
        <collection property="documentVersions" ofType="org.complitex.flexbuh.entity.dictionary.DocumentVersion"
                    column="{cDoc=c_doc, cDocSub=c_doc_sub}"
                    select="org.complitex.flexbuh.service.dictionary.DocumentVersionBean.selectDocumentVersionsByDocument"/>
    </resultMap>

    <insert id="insertDocument" parameterType="org.complitex.flexbuh.entity.dictionary.Document" keyProperty="id" useGeneratedKeys="true">
        insert into `document`
          (`upload_date`, `begin_date`, `end_date`, `c_doc`, `c_doc_sub`,`cnt_set`, `parent_c_doc`,
            `parent_c_doc_sub`, `selected`, `name_ru`, `name_uk`)
        values
          (#{uploadDate}, #{beginDate}, #{endDate}, #{cDoc}, #{cDocSub}, #{cntSet}, #{parentCDoc},
            #{parentCDocSub}, #{selected}, #{nameRu}, #{nameUk})
    </insert>

    <select id="selectAllDocuments" resultMap="documentResultMap">
        select * from document
    </select>

    <select id="selectAllDocumentsCount" resultType="int">
        select count(*) from `document`
    </select>

    <select id="selectDocuments" parameterType="org.complitex.flexbuh.entity.AbstractFilter" resultMap="documentResultMap">
        select * from `document` order by `c_doc`, `c_doc_sub` limit #{first}, #{count}
    </select>

    <select id="selectDocument" parameterType="long" resultMap="documentResultMap">
        select * from `document` where `id` = #{id}
    </select>

    <select id="selectLinkedDocuments" parameterType="org.complitex.flexbuh.entity.dictionary.Document" resultMap="linkedDocumentResultMap">
        select * from `document` where `parent_c_doc` = #{cDoc} and `parent_c_doc_sub` = #{cDocSub}
    </select>

    <select id="selectJuridicalDocuments" resultMap="linkedDocumentResultMap">
        select * from `document` where `c_doc` like 'J%'
    </select>

    <select id="selectPhysicalDocuments" resultMap="linkedDocumentResultMap">
        select * from `document` where `c_doc` like 'F%'
    </select>
</mapper>