<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.DocumentVersionBean">
    <resultMap id="documentVersionResultMap" type="org.complitex.flexbuh.entity.dictionary.DocumentVersion"
			   extends="org.complitex.flexbuh.entity.dictionary.AbstractPeriodDictionary.periodDictionaryResultMap">
        <result column="c_doc" property="cDoc"/>
        <result column="c_doc_sub" property="cDocSub"/>
        <result column="c_doc_ver" property="cDocVer"/>

		<collection property="normativeDocumentNames" ofType="org.complitex.flexbuh.entity.dictionary.NormativeDocumentName"
				column="id" select="selectNormativeDocumentNames"/>
    </resultMap>

    <resultMap id="normativeDocumentNameResultMap" type="org.complitex.flexbuh.entity.dictionary.NormativeDocumentName"
               extends="org.complitex.flexbuh.service.LanguageBean.localizedStringResultMap">
        <result column="document_version_id" property="documentVersionId"/>
    </resultMap>

    <insert id="insertDocumentVersion" parameterType="org.complitex.flexbuh.entity.dictionary.DocumentVersion"
            keyProperty="id" useGeneratedKeys="true">
        insert into `document_version` (`upload_date`, `begin_date`, `end_date`, `c_doc`, `c_doc_sub`, `c_doc_ver`)
        	values (#{uploadDate}, #{beginDate}, #{endDate}, #{cDoc}, #{cDocSub}, #{cDocVer})
    </insert>

	<select id="selectAllDocumentVersions" resultMap="documentVersionResultMap">
        select * from `document_version`
    </select>

	<select id="selectDocumentVersions" parameterType="org.complitex.flexbuh.entity.AbstractFilter" resultMap="documentVersionResultMap">
        select * from `document_version` order by `c_doc`, `c_doc_sub`, `c_doc_ver` limit #{first}, #{count}
    </select>

	<select id="selectDocumentVersion" parameterType="long" resultMap="documentVersionResultMap">
        select * from `document_version` where `id` = #{id}
    </select>

    <select id="selectAllDocumentVersionsCount" resultType="int">
        select count(*) from `document_version`
    </select>

    <!--NormativeDocumentName-->

    <select id="selectNormativeDocumentNames" parameterType="long" resultMap="normativeDocumentNameResultMap">
		select * from `normative_document_name` where `document_version_id` = #{id}
	</select>

    <insert id="insertNormativeDocumentName" parameterType="org.complitex.flexbuh.entity.dictionary.NormativeDocumentName"
            keyProperty="id" useGeneratedKeys="true">
        insert into `normative_document_name` (`document_version_id`, `language_id`, `value`)
        	values (#{documentVersionId}, #{language.id}, #{value})
    </insert>
</mapper>