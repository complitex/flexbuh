<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.DocumentVersionBean">
    <resultMap id="documentVersionResultMap"
			   type="org.complitex.flexbuh.entity.dictionary.DocumentVersion"
			   extends="org.complitex.flexbuh.entity.dictionary.DictionaryOfLimitedTime.dictionaryOfLimitedTimeResultMap">
        <result column="document_type" property="documentType"/>
        <result column="document_sub_type" property="documentSubType"/>
        <result column="version" property="version"/>
		<collection property="normativeDocumentNames" javaType="java.util.ArrayList" ofType="org.complitex.flexbuh.entity.dictionary.NormativeDocumentName"
				column="id" select="org.complitex.flexbuh.entity.dictionary.NormativeDocumentName.selectNormativeDocumentNames"/>
    </resultMap>

    <insert id="create" parameterType="org.complitex.flexbuh.entity.dictionary.DocumentVersion"
			keyProperty="id" useGeneratedKeys="true"
			flushCache="true">
        insert into `${table}` (`status`, `upload_date`, `begin_date`, `end_date`, `document_type`, `document_sub_type`, `version`)
        	values (#{status}, #{uploadDate}, #{beginDate}, #{endDate}, #{documentType}, #{documentSubType}, #{version})
    </insert>

	<select id="readAll" resultMap="documentVersionResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `status` = 0
    </select>

	<select id="readLimit" parameterType="map" resultMap="documentVersionResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `status` = 0
        order by `document_type`, `document_sub_type`, `version`
        limit #{first}, #{count}
    </select>

	<select id="findById" parameterType="org.complitex.flexbuh.entity.Stub" resultMap="documentVersionResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `id` = #{id}
    </select>
</mapper>