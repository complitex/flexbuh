<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.TaxInspectionBean">
    <resultMap id="taxInspectionResultMap"
			   type="org.complitex.flexbuh.entity.dictionary.TaxInspection"
			   extends="org.complitex.flexbuh.entity.dictionary.DictionaryOfLimitedTime.dictionaryOfLimitedTimeResultMap">
        <result property="code" column="code"/>
        <result property="regionCode" column="region_code"/>
		<result property="codeArea" column="code_area"/>
		<result property="codeTaxInspectionType" column="code_tax_inspection_type"/>
        <collection property="names" javaType="java.util.ArrayList" ofType="org.complitex.flexbuh.entity.dictionary.TaxInspectionName"
				column="id" select="org.complitex.flexbuh.entity.dictionary.TaxInspectionName.selectTaxInspectionNames"/>
		<collection property="areaNames" javaType="java.util.ArrayList" ofType="org.complitex.flexbuh.entity.dictionary.AreaName"
				column="id" select="org.complitex.flexbuh.entity.dictionary.AreaName.selectAreaNames"/>
    </resultMap>

    <insert id="create" parameterType="org.complitex.flexbuh.entity.dictionary.TaxInspection"
			keyProperty="id" useGeneratedKeys="true"
			flushCache="true">
        insert into `${table}` (`status`, `upload_date`, `begin_date`, `end_date`, `code`, `region_code`,`code_area`, `code_tax_inspection_type`)
        	values (#{status}, #{uploadDate}, #{beginDate}, #{endDate}, #{code}, #{regionCode}, #{codeArea}, #{codeTaxInspectionType})
    </insert>

	<select id="readAll" resultMap="taxInspectionResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `status` = 0
    </select>

	<select id="readLimit" parameterType="map" resultMap="taxInspectionResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `status` = 0
        order by `code`
        limit #{first}, #{count}
    </select>

	<select id="findById" parameterType="org.complitex.flexbuh.entity.Stub" resultMap="taxInspectionResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `id` = #{id}
    </select>
</mapper>