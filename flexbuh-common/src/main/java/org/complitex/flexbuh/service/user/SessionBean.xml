<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.user.SessionBean">
    <resultMap id="sessionResultMap" type="org.complitex.flexbuh.entity.user.Session">
		<id column="id" property="id"/>
        <result column="cookie" property="cookie"/>
    </resultMap>

    <insert id="insertSession" parameterType="org.complitex.flexbuh.entity.user.Session" keyProperty="id" useGeneratedKeys="true">
        insert into `session` (`cookie`) values (#{cookie})
    </insert>

	<select id="selectSession" parameterType="org.complitex.flexbuh.entity.user.Session" resultMap="sessionResultMap">
        select * from `session` where `id` = #{id}
    </select>

	<select id="selectSessionByCookie" parameterType="string" resultMap="sessionResultMap">
        select * from `session` where `cookie` = #{cookie}
    </select>
</mapper>