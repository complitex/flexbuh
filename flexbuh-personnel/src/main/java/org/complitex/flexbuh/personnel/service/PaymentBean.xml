<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.personnel.service.PaymentBean">
    <resultMap id="paymentResultMap" type="org.complitex.flexbuh.personnel.entity.Payment"
            extends="org.complitex.flexbuh.common.entity.TemporalDomainObject.temporalDomainObjectResultMap">

        <result column="name" property="name"/>
        <result column="salary" property="salary"/>
        <result column="currency_unit" property="currencyUnit"/>

    </resultMap>

    <select id="selectCurrentTDObjectById" parameterType="map" resultMap="paymentResultMap">
        select *, #{currentDate} as `current_date` from `payment` where `id` = #{id} and
        <include refid="org.complitex.flexbuh.common.entity.TemporalDomainObject.dateConstraint"/>
    </select>

</mapper>