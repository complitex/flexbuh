<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.common.service.organization.OrganizationBean">
    <resultMap id="organizationResultMap" type="org.complitex.flexbuh.common.entity.organization.Organization">
		<id column="id" property="id"/>

        <result column="name" property="name"/>
        <result column="type" property="type"/>

        <result column="phone" property="phone"/>
        <result column="fax" property="fax"/>
        <result column="email" property="email"/>
        <result column="http_address" property="httpAddress"/>

        <result column="physical_address_zip_code" property="physicalAddressZipCode"/>
        <result column="physical_address_country" property="physicalAddressCountry"/>
        <result column="physical_address_region" property="physicalAddressRegion" />
        <result column="physical_address_area" property="physicalAddressArea" />
        <result column="physical_address_city" property="physicalAddressCity" />
        <result column="physical_address_city_type" property="physicalAddressCityType" />
        <result column="physical_address_street" property="physicalAddressStreet" />
        <result column="physical_address_street_type" property="physicalAddressStreetType" />
        <result column="physical_address_building" property="physicalAddressBuilding" />
        <result column="physical_address_apartment" property="physicalAddressApartment" />

        <result column="juridical_address_zip_code" property="juridicalAddressZipCode"/>
        <result column="juridical_address_country" property="juridicalAddressCountry"/>
        <result column="juridical_address_region" property="juridicalAddressRegion" />
        <result column="juridical_address_area" property="juridicalAddressArea" />
        <result column="juridical_address_city" property="juridicalAddressCity" />
        <result column="juridical_address_city_type" property="juridicalAddressCityType" />
        <result column="juridical_address_street" property="juridicalAddressStreet" />
        <result column="juridical_address_street_type" property="juridicalAddressStreetType" />
        <result column="juridical_address_building" property="juridicalAddressBuilding" />
        <result column="juridical_address_apartment" property="juridicalAddressApartment" />

    </resultMap>

    <insert id="insertOrganization"
            parameterType="org.complitex.flexbuh.common.entity.organization.Organization"
            keyProperty="id" useGeneratedKeys="true">
        insert into `organization` (`name`, `type`, `phone`, `fax`, `email`, `http_address`,
        `physical_address_zip_code`, `physical_address_country`, `physical_address_region`, `physical_address_area`,
        `physical_address_city`, `physical_address_city_type`, `physical_address_street`, `physical_address_street_type`,
        `physical_address_building`, `physical_address_apartment`,
        `juridical_address_zip_code`, `juridical_address_country`, `juridical_address_region`, `juridical_address_area`,
        `juridical_address_city`, `juridical_address_city_type`, `juridical_address_street`, `juridical_address_street_type`,
        `juridical_address_building`, `juridical_address_apartment`)
        values (#{name}, #{type}, #{phone}, #{fax}, #{email}, #{http_address},
         #{physicalAddressZipCode}, #{physicalAddressCountry}, #{physicalAddressRegion}, #{physicalAddressArea},
         #{physicalAddressCity}, #{physicalAddressCityType}, #{physicalAddressStreet}, #{physicalAddressStreetType},
         #{physicalAddressBuilding}, #{physicalAddressApartment},
         #{juridicalAddressZipCode}, #{juridicalAddressCountry}, #{juridicalAddressRegion}, #{juridicalAddressArea},
         #{juridicalAddressCity}, #{juridicalAddressCityType}, #{juridicalAddressStreet}, #{juridicalAddressStreetType},
         #{juridicalAddressBuilding}, #{juridicalAddressApartment})
    </insert>

    <update id="updateOrganization" parameterType="org.complitex.flexbuh.common.entity.organization.Organization">
        update `organization` set `name` = #{name}, `type` = #{type},
            `phone` = #{phone}, `fax` = #{fax}, `email` = #{email}, `http_address` = #{httpAddress},
            `physical_zip_code` = #{physicalZipCode}, `physical_country` = #{physicalCountry},
            `physical_region` = #{physicalRegion}, `physical_city` = #{physicalCity},
            `physical_city_type` = #{physicalCityType}, `physical_street` = #{physicalStreet},
            `physical_street_type` = #{physicalStreetType}, `physical_building` = #{physicalBuilding},
            `physical_apartment` = #{physicalApartment},
            `juridical_zip_code` = #{juridicalZipCode}, `juridical_country` = #{juridicalCountry},
            `juridical_region` = #{juridicalRegion}, `juridical_city` = #{juridicalCity},
            `juridical_city_type` = #{juridicalCityType}, `juridical_street` = #{juridicalStreet},
            `juridical_street_type` = #{juridicalStreetType}, `juridical_building` = #{juridicalBuilding},
            `juridical_apartment` = #{juridicalApartment}
             where `id` = #{id}
    </update>

    <select id="selectOrganizationById" parameterType="org.complitex.flexbuh.common.entity.organization.Organization"
            resultMap="organizationResultMap">
        select * from `organization` where `id` = #{id}
    </select>

    <select id="selectAllOrganizations" parameterType="org.complitex.flexbuh.common.entity.organization.Organization"
            resultMap="organizationResultMap">
        select * from `organization`
    </select>

</mapper>