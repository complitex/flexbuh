<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.entity.dictionary.AreaName">
    <resultMap id="areaNameResultMap" type="org.complitex.flexbuh.entity.dictionary.AreaName">
        <id column="id" property="id"/>
        <result property="value" column="value"/>
		<association property="language" column="language_id" javaType="org.complitex.flexbuh.entity.Language"
					 select="org.complitex.flexbuh.service.LanguageBean.findById"/>
    </resultMap>

	<select id="selectAreaNames" parameterType="long" resultMap="areaNameResultMap"
			useCache="true" flushCache="false">
		select *  from `area_name` where `tax_inspection_id`=#{id}
	</select>

	<insert id="create" parameterType="map" keyProperty="id" useGeneratedKeys="true"
			flushCache="true">
        insert into `area_name` (`tax_inspection_id`, `language_id`, `value`)
        	values (#{taxInspectionId}, #{languageId}, #{val})
    </insert>

</mapper>