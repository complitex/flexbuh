<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.entity.dictionary.CurrencyName">
    <resultMap id="currencyNameResultMap" type="org.complitex.flexbuh.entity.dictionary.CurrencyName">
        <id column="id" property="id"/>
        <result property="value" column="value"/>
		<association property="language" column="language_id" javaType="org.complitex.flexbuh.entity.Language"
					 select="org.complitex.flexbuh.service.LanguageBean.findById"/>
    </resultMap>

	<select id="selectCurrencyNames" parameterType="long" resultMap="currencyNameResultMap"
			useCache="true" flushCache="false">
		select *  from `currency_name` where `currency_id`=#{id}
	</select>

	<insert id="create" parameterType="map" keyProperty="id" useGeneratedKeys="true"
			flushCache="true">
        insert into `currency_name` (`currency_id`, `language_id`, `value`)
        	values (#{currencyId}, #{languageId}, #{val})
    </insert>

</mapper>