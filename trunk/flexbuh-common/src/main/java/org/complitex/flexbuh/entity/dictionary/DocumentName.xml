<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.entity.dictionary.DocumentName">
    <resultMap id="documentNameResultMap" type="org.complitex.flexbuh.entity.dictionary.DocumentName">
        <id column="id" property="id"/>
        <result property="value" column="value"/>
		<association property="language" column="language_id"
					 resultMap="org.complitex.flexbuh.service.LanguageBean.languageResultMap"/>
    </resultMap>

	<select id="selectDocumentNames" parameterType="long" resultMap="documentNameResultMap"
			useCache="true" flushCache="false">
		select *  from `document_name` where `document_id`=#{id}
	</select>

	<insert id="create" parameterType="map" keyProperty="id" useGeneratedKeys="true"
			flushCache="true">
        insert into `document_name` (`document_id`, `language_id`, `value`)
        	values (#{documentId}, #{languageId}, #{val})
    </insert>

</mapper>