<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.entity.dictionary.NormativeDocumentName">
    <resultMap id="normativeDocumentNameResultMap" type="org.complitex.flexbuh.entity.dictionary.NormativeDocumentName">
        <id column="id" property="id"/>
        <result property="value" column="value"/>
		<association property="language" column="language_id" javaType="org.complitex.flexbuh.entity.Language"
					 select="org.complitex.flexbuh.service.LanguageBean.findById"/>
    </resultMap>

	<select id="selectNormativeDocumentNames" parameterType="long" resultMap="normativeDocumentNameResultMap"
			useCache="true" flushCache="false">
		select *  from `normative_document_name` where `document_version_id`=#{id}
	</select>

	<insert id="create" parameterType="map" keyProperty="id" useGeneratedKeys="true"
			flushCache="true">
        insert into `normative_document_name` (`document_version_id`, `language_id`, `value`)
        	values (#{documentVersionId}, #{languageId}, #{val})
    </insert>

</mapper>