<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.FeedbackBean">
    <resultMap id="feedbackResultMap" type="org.complitex.flexbuh.entity.Feedback">
        <id column="id" property="id"/>
        <result column="session_id" property="sessionId"/>
        <result column="name" property="name"/>
        <result column="email" property="email"/>
        <result column="message" property="message"/>
    </resultMap>

    <select id="selectFeedbacks" parameterType="org.complitex.flexbuh.entity.AbstractFilter" resultMap="feedbackResultMap">
        select * from `feedback` order by `date` desc limit #{first}, #{count}
    </select>

    <select id="selectFeedbacksCount" resultType="int">
        select count(*) from `feedback`
    </select>

    <insert id="insertFeedback" parameterType="org.complitex.flexbuh.entity.Feedback">
        insert into `feedback` (`session_id`, `name`, `email`, `message`)
          values (#{sessionId}, #{name}, #{email}, #{message})
    </insert>
</mapper>