<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.LanguageBean">
	<resultMap id="languageResultMap" type="org.complitex.flexbuh.entity.Language">
		<id property="id" column="id"/>
		<result column="lang_iso_code" property="langIsoCode"/>
		<result column="default_lang" property="defaultLang"/>
    </resultMap>

	<select id="selectAllLanguage" resultMap="languageResultMap">
        select * from `language`
    </select>

	<select id="selectLanguage" parameterType="org.complitex.flexbuh.entity.Language" resultMap="languageResultMap">
        select * from `language` where `id` = #{id}
    </select>

	<select id="selectLanguageByLangIsoCode" parameterType="map" resultMap="languageResultMap">
        select * from `language` where `lang_iso_code` = #{langIsoCode}
    </select>
</mapper>