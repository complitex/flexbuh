<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.CurrencyBean">
    <resultMap id="currencyResultMap"
			   type="org.complitex.flexbuh.entity.dictionary.Currency"
			   extends="org.complitex.flexbuh.entity.dictionary.DictionaryOfLimitedTime.dictionaryOfLimitedTimeResultMap">
        <result column="code_number" property="codeNumber"/>
        <result column="code_string" property="codeString"/>
		<collection property="names" javaType="java.util.ArrayList" ofType="org.complitex.flexbuh.entity.dictionary.CurrencyName"
				column="id" select="org.complitex.flexbuh.entity.dictionary.CurrencyName.selectCurrencyNames"/>
    </resultMap>

    <insert id="create" parameterType="org.complitex.flexbuh.entity.dictionary.Currency"
			keyProperty="id" useGeneratedKeys="true"
			flushCache="true">
        insert into `${table}` (`status`, `upload_date`, `begin_date`, `end_date`, `code_number`, `code_string`)
        	values (#{status}, #{uploadDate}, #{beginDate}, #{endDate}, #{codeNumber}, #{codeString})
    </insert>

	<select id="readAll" resultMap="currencyResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `status` = 0
    </select>

	<select id="findById" parameterType="org.complitex.flexbuh.entity.Stub" resultMap="currencyResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `id` = #{id}
    </select>
</mapper>