<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.DictionaryBean">

    <delete id="delete" parameterType="org.complitex.flexbuh.entity.Stub"
			flushCache="true">
        delete from `${table}` where `id` = #{id}
    </delete>

	<delete id="deleteByUploadDate" parameterType="map"
			flushCache="true">
        delete from `${table}` where `upload_date` = #{uploadDate}
    </delete>

	<update id="activateByUploadDate" parameterType="map"
			flushCache="true">
        update `${table}` set `status`=0 where `upload_date` = #{uploadDate}
    </update>

	<select id="readSize" resultType="int"
			useCache="true" flushCache="false">
        select count(id) from `${table}` where `status` = 0
    </select>

</mapper>