<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.DictionaryTypeBean">
    <resultMap id="dictionaryTypeResultMap" type="org.complitex.flexbuh.entity.dictionary.DictionaryType">
		<id property="id" column="id"/>
		<result column="code" property="code"/>
		<collection property="names" javaType="java.util.ArrayList" ofType="org.complitex.flexbuh.entity.dictionary.DictionaryTypeName"
				column="id" select="org.complitex.flexbuh.entity.dictionary.DictionaryTypeName.selectDictionaryTypeNames"/>
		<collection property="fileNames" javaType="java.util.ArrayList" ofType="java.lang.String"
				column="id" select="findFileName"/>
    </resultMap>

	<select id="readAll" resultMap="dictionaryTypeResultMap" parameterType="map"
			useCache="true" flushCache="false">
        select * from `${table}`
    </select>

	<select id="findById" parameterType="org.complitex.flexbuh.entity.Stub" resultMap="dictionaryTypeResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `id` = #{id}
    </select>

	<select id="findByCode" parameterType="map" resultMap="dictionaryTypeResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `code` = #{code}
    </select>

	<select id="findFileName" parameterType="long" resultType="String" useCache="true" flushCache="false">
		select `file_name` from `dictionary_file_name` where `dictionary_type_id` = #{id}
	</select>

</mapper>