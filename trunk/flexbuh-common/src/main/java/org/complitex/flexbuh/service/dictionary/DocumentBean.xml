<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.DocumentBean">
    <resultMap id="documentResultMap" type="org.complitex.flexbuh.entity.dictionary.Document" extends="abstractPeriodDictionaryResultMap">
        <result property="cDoc" column="c_doc"/>
        <result property="cDocSub" column="c_doc_sub"/>
        <result property="cntSet" column="cnt_set"/>
        <result property="parentCDoc" column="parent_c_doc"/>
        <result property="parentCDocSub" column="parent_c_doc_sub"/>
        <result property="selected" column="selected"/>

        <collection property="names" ofType="org.complitex.flexbuh.entity.dictionary.DocumentName" column="id" select="selectDocumentNames"/>
    </resultMap>

    <resultMap id="documentNameResultMap" type="org.complitex.flexbuh.entity.dictionary.DocumentName" extends="localizedStringResultMap">
        <result column="document_id" property="documentId"/>
    </resultMap>

    <insert id="insertDocument" parameterType="org.complitex.flexbuh.entity.dictionary.Document" keyProperty="id" useGeneratedKeys="true">
        insert into `document`
          (`upload_date`, `begin_date`, `end_date`, `c_doc`, `c_doc_sub`,`cnt_set`, `parent_c_doc`,
            `parent_c_doc_sub`, `selected`)
        values
          (#{uploadDate}, #{beginDate}, #{endDate}, #{cDoc}, #{cDocSub}, #{cntSet}, #{parentCDoc},
            #{parentCDocSub}, #{selected})
    </insert>

    <select id="selectAllDocuments" resultMap="documentResultMap">
        select * from document
    </select>

    <select id="selectAllDocumentsCount">
        select count(*) from `document`
    </select>

    <select id="selectDocuments" parameterType="org.complitex.flexbuh.entity.AbstractFilter" resultMap="documentResultMap">
        select * from `document` order by `cDoc`, `cDocSub` limit #{first}, #{count}
    </select>

    <select id="selectDocument" parameterType="long" resultMap="documentResultMap">
        select * from `document` where `id` = #{id}
    </select>

    <select id="selectLinkedDocuments" parameterType="org.complitex.flexbuh.entity.dictionary.Document" resultMap="documentResultMap">
        select * from `document` where `parent_c_doc` = #{parentCDoc} and `parent_c_doc_sub` = #{parentCDocSub}
    </select>

    <!--DocumentName-->

    <select id="selectDocumentNames" parameterType="long" resultMap="documentNameResultMap">
		select * from `document_name` where `document_id`=#{id}
	</select>

    <insert id="insertDocumentName" parameterType="org.complitex.flexbuh.entity.dictionary.DocumentName"
            keyProperty="id" useGeneratedKeys="true">
        insert into `document_name` (`document_id`, `language_id`, `value`) values (#{documentId}, #{language.id}, #{value})
    </insert>
</mapper>