<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.dictionary.RegionBean">
    <resultMap id="regionResultMap"
			   type="org.complitex.flexbuh.entity.dictionary.Region"
			   extends="org.complitex.flexbuh.entity.dictionary.DictionaryOfLimitedTime.dictionaryOfLimitedTimeResultMap">
        <result property="code" column="code"/>
        <collection property="names" javaType="java.util.ArrayList" ofType="org.complitex.flexbuh.entity.dictionary.RegionName"
				column="id" select="org.complitex.flexbuh.entity.dictionary.RegionName.selectRegionNames"/>
    </resultMap>

    <insert id="create" parameterType="org.complitex.flexbuh.entity.dictionary.Region"
			keyProperty="id" useGeneratedKeys="true"
			flushCache="true">
        insert into `${table}` (`status`, `upload_date`, `begin_date`, `end_date`, `code`)
        	values (#{status}, #{uploadDate}, #{beginDate}, #{endDate}, #{code})
    </insert>

	<select id="readAll" resultMap="regionResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `status` = 0
    </select>

	<select id="readLimit" parameterType="map" resultMap="regionResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `status` = 0
        order by `code`
        limit #{first}, #{count}
    </select>

	<select id="findById" parameterType="org.complitex.flexbuh.entity.Stub" resultMap="regionResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `id` = #{id}
    </select>
</mapper>