<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.user.PersonTypeBean">
    <resultMap id="personTypeResultMap" type="org.complitex.flexbuh.entity.user.PersonType"
               extends="org.complitex.flexbuh.entity.LocalizedDomainObject.localizedDomainObjectResultMap">
		<id property="id" column="id"/>
		<result column="code" property="code"/>
    </resultMap>

	<select id="selectPersonType" parameterType="long" resultMap="personTypeResultMap">
        select * from `person_type` where `id` = #{id}
    </select>

	<select id="selectPersonTypesByCode" parameterType="string" resultMap="personTypeResultMap">
        select * from `person_type` where `code` = #{code}
    </select>
</mapper>