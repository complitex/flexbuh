<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.user.PersonTypeBean">
    <resultMap id="personTypeResultMap" type="org.complitex.flexbuh.entity.user.PersonType">
		<id property="id" column="id"/>
		<result column="code" property="code"/>

		<collection property="names" ofType="org.complitex.flexbuh.entity.user.PersonTypeName" column="id" select="selectPersonTypeName"/>
    </resultMap>

    <resultMap id="personTypeNameResultMap" type="org.complitex.flexbuh.entity.user.PersonTypeName">
        <id column="id" property="id"/>
        <result property="value" column="value"/>

        <association property="language" column="language_id" javaType="org.complitex.flexbuh.entity.Language"
                     select="selectLanguage"/>
    </resultMap>

	<select id="selectPersonType" parameterType="long" resultMap="personTypeResultMap">
        select * from `person_type` where `id` = #{id}
    </select>

	<select id="selectPersonTypesByCode" parameterType="string" resultMap="personTypeResultMap">
        select * from `person_type` where `code` = #{code}
    </select>

    <!--PersonTypeName-->

    <select id="selectPersonTypeNames" resultMap="personTypeNameResultMap">
		select * from `person_type_name`
	</select>

    <select id="selectPersonTypeName" parameterType="long" resultMap="personTypeNameResultMap">
		select * from `person_type_name` where `person_type_id` = #{id}
	</select>
</mapper>