<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.complitex.flexbuh.service.user.PersonTypeBean">
    <resultMap id="personTypeResultMap" type="org.complitex.flexbuh.entity.user.PersonType">
		<id property="id" column="id"/>
		<result column="code" property="code"/>
		<collection property="names" javaType="java.util.ArrayList" ofType="org.complitex.flexbuh.entity.user.PersonTypeName"
				column="id" select="org.complitex.flexbuh.entity.user.PersonTypeName.findById"/>
    </resultMap>

	<select id="readAll" resultMap="personTypeResultMap" parameterType="map"
			useCache="true" flushCache="false">
        select * from `${table}`
    </select>

	<select id="findById" parameterType="long" resultMap="personTypeResultMap"
			useCache="true" flushCache="false">
        select * from `person_type` where `id` = #{id}
    </select>

	<select id="findByCode" parameterType="map" resultMap="personTypeResultMap"
			useCache="true" flushCache="false">
        select * from `${table}` where `code` = #{code}
    </select>

</mapper>