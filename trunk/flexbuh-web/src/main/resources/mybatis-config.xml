<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeHandlers>
        <typeHandler javaType="org.complitex.flexbuh.document.entity.PersonType"
                     handler="org.complitex.flexbuh.document.entity.PersonTypeHandler"/>
    </typeHandlers>

    <environments default="local">
        <environment id="local">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <property name="data_source" value="jdbc/flexbuhResource"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="org/complitex/flexbuh/service/ConfigBean.xml"/>
        <mapper resource="org/complitex/flexbuh/service/TemplateBean.xml"/>

        <mapper resource="org/complitex/flexbuh/entity/LocalizedDomainObject.xml"/>
        <mapper resource="org/complitex/flexbuh/entity/dictionary/AbstractDictionary.xml"/>
        <mapper resource="org/complitex/flexbuh/entity/dictionary/AbstractPeriodDictionary.xml"/>

        <mapper resource="org/complitex/flexbuh/service/dictionary/CurrencyBean.xml"/>
        <mapper resource="org/complitex/flexbuh/service/dictionary/DictionaryTypeBean.xml"/>
        <mapper resource="org/complitex/flexbuh/service/dictionary/DocumentBean.xml"/>
        <mapper resource="org/complitex/flexbuh/service/dictionary/DocumentTermBean.xml"/>
        <mapper resource="org/complitex/flexbuh/service/dictionary/DocumentVersionBean.xml"/>
        <mapper resource="org/complitex/flexbuh/service/dictionary/RegionBean.xml"/>
        <mapper resource="org/complitex/flexbuh/service/dictionary/TaxInspectionBean.xml"/>

        <mapper resource="org/complitex/flexbuh/service/user/SessionBean.xml"/>
        <mapper resource="org/complitex/flexbuh/service/user/UserBean.xml"/>

        <mapper resource="org/complitex/flexbuh/document/service/PersonProfileBean.xml"/>
        <mapper resource="org/complitex/flexbuh/document/service/DeclarationBean.xml"/>
    </mappers>
</configuration>
